{
    "output": ["HDMI-A-1"],
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    // "height": 24, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
	"cava",
	"wireplumber",
	"network",
        "clock",
	"custom/swaync"
    ],
    "hyprland/workspaces": {
        "all-outputs": false,
        "warp-on-scroll": true,
        "enable-bar-scroll": true,
        "format": "{icon}",
        "format-icons": {
            "1": "",
            "2": "",
            "5": "",
            "6": "",
	    "7": "",
            "8": ""
        },
	"persistent-workspaces": {
	    "*": 9
	}
    },
    "hyprland/window": {
        "format": "{title}",
        "max-length": 40,
        "all-outputs": true
    },

    "cava": {
        // "cava_config": "$XDG_CONFIG_HOME/cava/cava.conf",
        "framerate": 30,
        "sensitivity": 1,
        "bars": 14,
        "lower_cutoff_freq": 50,
        "higher_cutoff_freq": 10000,
        "hide_on_silence": false,
        // "format_silent": "quiet",
        "method": "pipewire",
        "source": "auto",
        "stereo": true,
        "reverse": false,
        "bar_delimiter": 0,
        "monstercat": false,
        "waves": false,
        "noise_reduction": 0.77,
        "input_delay": 2,
        "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█" ],
        "actions": {
                   "on-click-right": ""
                   }
    },

    "wireplumber": {
        "format": "{volume}% {icon}",
        "format-muted": " {format_source}",
        "format-icons": {
    	"default": ["", ""]
        }
    },
    
    "network": {
 	"interface": "enp2s0",
	"format-ethernet": "󰛳",
  "format-linked": "󰛵",
	"format-disconnected": "󱘖"
    },

    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": " {:%H:%M}",
        "format-alt": " {:%a %F}"
    },

// In your waybar config (~/.config/waybar/config)
    "custom/swaync": {
        "exec": "~/.config/waybar/scripts/swaync.sh",
	"format": "{text}",
	"interval": 3,
	"return_type": "json",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    }
}]
